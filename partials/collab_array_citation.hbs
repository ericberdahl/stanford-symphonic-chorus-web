{{~ -let '_style' (default style "html") ~}}
{{#if ( -equal? ( -size collaborators ) 1 ) }}
    {{ -let '__joint' '' }}
    {{ -let '__last_joint' '' }}
{{else if ( -equal? ( -size collaborators ) 2 ) }}
    {{ -let '__joint' ' ' }}
    {{ -let '__last_joint' 'and ' }}
{{else}}
    {{ -let '__joint' ', ' }}
    {{ -let '__last_joint' 'and ' }}
{{/if}}
{{#each collaborators }}
    {{#unless @first }}{{../__joint}}{{/unless}}
    {{#if @last }}{{../__last_joint}}{{/if}}
    {{~> collab_citation .. collab=. style=../_style ~}}
{{/each}}
