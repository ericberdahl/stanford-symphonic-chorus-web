<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
{{#block "head-title"}}
	<title>Stanford Symphonic Chorus</title>
{{/block}}
<!-- Base stylesheet which imports typography, resets, header/footer layout, and other miscellaneous styles -->
<link rel="stylesheet" type="text/css" href="/css/{{body_class}}.css">
<link rel="stylesheet" type="text/css" href="/mediaboxAdvanced/mediaboxAdv-Dark.css">
{{#each this.scripts as |js| }}
	<script src="/js/{{js}}.js" type="text/javascript"></script>
{{/each}}
<script src="/mediaboxAdvanced/mootools-1-3-2-nocompat.js" type="text/javascript"></script>
<script src="/mediaboxAdvanced/mediaboxAdv.js" type="text/javascript"></script>
<script src="/js/emus.js" type="text/javascript"></script>
</head>
<body class="{{body_class}}">
<div id="container">
	<div id="container_header">
		<div id="header">
			{{> (_get . 'logo_include') }}
			{{> container_search }}
		</div>
	</div>
	{{> nav_topic }}
	<div id="title">
		<h1>
			{{#block "body-title"}}
				{{ this.title }}
			{{/block}}
		</h1>
	</div>

	<div id="content_container">
		{{#if (content "spotlight") }}
			<div id="spotlight">
				{{{ block "spotlight" }}}
			</div>
		{{/if}}

		{{#if (content "introduction") }}
			<div id="introduction">
				{{{ block "introduction" }}}
			</div>
		{{/if}}

		<div id="content_main">
			{{{ block "main-content" }}}
		</div>
	</div>

	{{#if (content "sidebar") }}
		<div id="sidebar">
			{{{ block "sidebar" }}}
			<div id="seal"></div>
		</div>
	{{/if}}

	{{> footer }}
</div>
</body>
</html>
