<!doctype html>
<html lang="en">
<head>
<meta charset="UTF-8">
{{#block "head-title"}}
	<title>Stanford Symphonic Chorus</title>
{{/block}}
<!-- Base stylesheet which imports typography, resets, header/footer layout, and other miscellaneous styles -->
<link rel="stylesheet" type="text/css" href="/css/base.css">
<!-- Page specific stylesheet for middle layout section (sidebars and content_main) -->
{{#each this.stylesheets as |css| }}
	<link rel="stylesheet" type="text/css" href="/css/{{css}}.css">
{{/each}}
{{#each this.scripts as |js| }}
	<script src="/js/{{js}}.js" type="text/javascript"></script>
{{/each}}
<script src="/js/mootools.js" type="text/javascript"></script>
<script src="/js/mediabox.js" type="text/javascript"></script>
<script src="/js/emus.js" type="text/javascript"></script>
</head>
<body{{#if body_class}} class="{{body_class}}"{{/if}}>
<!-- TemplateBeginEditable name="top" -->
<!-- TemplateEndEditable -->
<div class="skip">
	<a href="#content_main">Skip to Content</a>
</div>
<div id="container">
	<div id="container_header">
		<div id="header">
			{{> (_get . 'logo_include') }}
			{{> container_search }}
		</div>
	</div>
	{{> nav_topic }}
	<div id="title">
		<h1>
			{{#block "body-title"}}
				<!-- TemplateBeginEditable name="Page Title" -->
				{{ this.title }}
				<!-- TemplateEndEditable -->
			{{/block}}
		</h1>
	</div>

	{{#if (content "introduction") }}
		<div id="introduction">
			{{{ block "introduction" }}}
		</div>
	{{/if}}

	<div id="content_main">
		{{{ block "main-content" }}}
	</div>

	{{#if (content "sidebar") }}
		<div id="sidebar">
			{{{ block "sidebar" }}}
			<div id="seal"></div>
		</div>
	{{/if}}

	{{> footer }}
</div>
<!-- TemplateBeginEditable name="bottom" -->
<!-- TemplateEndEditable -->
</body>
</html>
