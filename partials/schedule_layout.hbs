{{#extend "default_layout" title="Rehearsal and Performance Schedule"
					logo_include="logo_ssc"
					body_class="tertiary"
					stylesheets=(x-array "tertiary") }}
	{{#content "sidebar"}}
		<div id="related_pages">
			{{> about_us }}
		</div>
	{{/content}}

	{{#content "introduction"}}
		<div id="sidebar_navigation">
			<h2>Contents</h2>
			<ul>
				<li><a href="#this">Overview</a></li>
				<li><a href="#rehearsals">Rehearsals</a></li>
				<li><a href="#dress">Dress Rehearsals</a></li>
				<li><a href="#concerts">Concerts</a></li>
				{{#if this.events }}
					<li><a href="#events">Events</a></li>
				{{/if}}
				<li><a href="#looking-ahead">Looking Ahead</a></li>
				<li><a href="#looking-back">Looking Back</a></li>
			</ul>
		</div>
	{{/content}}

	{{#content "main-content"}}
		<div id="content_main">
			<div id="breadcrumb">
				<p>
					<!-- TemplateBeginEditable name="breadcrumb" -->
					<a href="/index.html">Symphonic Chorus Home</a>
					» <a href="/MemberPage.html">Member Information</a>
					» {{ this.title }}
					<!-- TemplateEndEditable -->
				</p>
			</div>
			<!-- TemplateBeginEditable name="content_main" -->
			<h2 id="this">Overview</h2>
			<table class="noborder">
				{{> schedule_overview performance=this showAuditions=true }}
			</table>

			<h2 id="rehearsals">Rehearsals</h2>
			<table>
				<tr>
					<th>Day</th>
					<th class="right">Date</th>
					<th>Location</th>
					<th>Time</th>
					<th>Description</th>
				</tr>
				{{#each _allRehearsals }}
					<tr>
						<td>{{ x-formatDate "dddd" start }}</td>
						<td class="right">{{ x-formatDate "D MMMM YYYY" start }}</td>
						<td>{{> loc_citation loc=this.location }}</td>
						<td>{{ x-formatDate "h:mma" start }} - {{ x-formatDate "h:mma" end }}
							{{#if registration }}
								<br>Registration starts at {{ x-formatDate "h:mma" registration }}
							{{/if}}
						</td>
						<td>{{ event }}</td>
					</tr>
				{{/each}}
			</table>

			<h2 id="dress">Dress Rehearsals</h2>
			<table>
				<tr>
					<th>Day</th>
					<th class="right">Date</th>
					<th>Location</th>
					<th>Time</th>
					<th>Description</th>
				</tr>
				{{#each this.dresses }}
					<tr class="dress">
						<td>{{ x-formatDate "dddd" this.start }}</td>
						<td class="right">{{ x-formatDate "DD MMMM YYYY" this.start }}</td>
						<td>{{> loc_citation loc=this.location }}</td>
						<td>{{ x-formatDate "h:mma" this.start }}</td>
						<td>Dress rehearsal</td>
					</tr>
				{{/each}}
			</table>

			<h2 id="concerts">Concerts</h2>
			<table>
				<tr>
					<th>Day</th>
					<th class="right">Date</th>
					<th>Location</th>
					<th>Time</th>
					<th>Description</th>
				</tr>
				{{#each this.concerts }}
					<tr>
						<td>{{ x-formatDate "dddd" this.start }}</td>
						<td class="right">{{ x-formatDate "DD MMMM YYYY" this.start }}</td>
						<td>{{> loc_citation loc=this.location }}</td>
						<td>{{#if this.call}}{{ x-formatDate "h:mma" this.call }}{{/if}}</td>
						<td>{{#if this.call}}Concert call for {{/if}}{{ x-formatDate "h:mma" this.start }} concert</td>
					</tr>
				{{/each}}
			</table>

			{{#if this.events }}
				<h2 id="events">Events</h2>
				<table>
					<tr>
						<th>Day</th>
						<th class="right">Date</th>
						<th>Location</th>
						<th>Time</th>
						<th>Description</th>
					</tr>
					{{#each this.events }}
						<tr>
							<td>{{ x-formatDate "dddd" this.start }}</td>
							<td class="right">{{ x-formatDate "DD MMMM YYYY" this.start }}</td>
							<td>{{ x-formatDate "h:mma" this.start }}</td>
							<td>{{> loc_citation loc=this.location }}</td>
							<td>{{ this.title }}</td>
						</tr>
					{{/each}}
				</table>
			{{/if}}
					
			<div>
				{{#if this.next}}
					<h2 id="looking-ahead">Looking Ahead</h2>
					<table class="noborder">
						<tbody>
							<tr>
								<td class="emph" colspan="3">{{#> link_object href=this.next}}{{this.next.quarter}}{{/link_object}}</td>
							</tr>
								{{> schedule_overview performance=this.next }}
						</tbody>
						{{#if this.next.next}}
							<tbody>
								<tr>
									<td class="emph" colspan="3">{{#> link_object href=this.next.next}}{{this.next.next.quarter}}{{/link_object}}</td>
								</tr>
								{{> schedule_overview performance=this.next.next }}
							</tbody>
						{{/if}}
						{{#if this.next.next.next}}
							<tbody>
								<tr>
									<td class="emph" colspan="3">{{#> link_object href=this.next.next.next}}{{this.next.next.next.quarter}}{{/link_object}}</td>
								</tr>
								{{> schedule_overview performance=this.next.next.next }}
							</tbody>
						{{/if}}
					</table>
				{{/if}}
				{{#if this.previous}}
					<h2 id="looking-back">Looking Back</h2>
					<table class="noborder">
						<tbody>
							<tr>
								<td class="emph" colspan="3">{{#> link_object href=this.previous}}{{this.previous.quarter}}{{/link_object}}</td>
							</tr>
								{{> schedule_overview performance=this.previous }}
						</tbody>
						{{#if this.previous.previous}}
							<tbody>
								<tr>
									<td class="emph" colspan="3">{{#> link_object href=this.previous.previous}}{{this.previous.previous.quarter}}{{/link_object}}</td>
								</tr>
								{{> schedule_overview performance=this.previous.previous }}
							</tbody>
						{{/if}}
						{{#if this.previous.previous.previous}}
							<tbody>
								<tr>
									<td class="emph" colspan="3">{{#> link_object href=this.previous.previous.previous}}{{this.previous.previous.previous.quarter}}{{/link_object}}</td>
								</tr>
								{{> schedule_overview performance=this.previous.previous.previous }}
							</tbody>
						{{/if}}
					</table>
				{{/if}}
			</div>
		</div>
	{{/content}}
{{/extend}}
