{{ -let '_style' (ssc-findLightboxStyle (default this.style 'default')) }}
<a class="{{ this._style.anchorClass }}" href="{{ this.image }}" title="{{{ this.caption }}}" rel="mediabox[{{ this.width }} {{ this.height }}]">
    <img class="{{ this._style.displayClass }}" src="{{ default this.display this.image }}" width="{{ this.img_width }}" height="{{ default this.img_height (round (divide (multiply this.height this.img_width) this.width)) }}" alt="{{{ this.caption }}}">
</a>
