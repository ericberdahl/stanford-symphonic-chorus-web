{{ -let '_showAuditions' (default showAuditions false) }}
{{ -let '_performance' performance }}

{{#*inline "linkIf"}}
    {{~#if _showAuditions}}<a href="{{link}}">{{/if}}{{ @partial-block }}{{#if _showAuditions}}</a>{{/if~}}
{{/inline}}

<tr>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>Repertoire:</td>

    <td><ul>
        {{#each _performance.repertoire }}
            <li>{{> piece_citation .. piece=this style="em-tagged" }}</li>
        {{/each}}
    </ul></td>
</tr>
{{#each _performance.soloists }}
    {{#if @first}}
        <tr>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td>With:</td>
            <td><ul>
    {{/if}}
                    <li>{{name}}, {{part}}</li>
    {{#if @last}}
            </ul></td>
        </tr>
    {{/if}}
{{/each}}
{{#each _performance.collaborators }}
    {{#if @first}}
        <tr>
            <td>&nbsp;&nbsp;&nbsp;</td>
            <td>In collaboration with:</td>
            <td><ul>
    {{/if}}
                <li>{{> collab_citation .. collab=this }}</li>
    {{#if @last}}
            </ul></td>
        </tr>
    {{/if}}
{{/each}}
<tr>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>{{#> linkIf link=(append (f-join "/" (dirname _performance.path) (stem _performance.path)) ".html#rehearsals") }}First rehearsal{{/linkIf}}:</td>
    <td><ul>
        <li>
            {{ moment _performance.first_rehearsal.start "dddd D MMMM YYYY" }} at {{ moment _performance.first_rehearsal.start "h:mma" }}, {{> loc_citation loc=_performance.first_rehearsal.location }}.
            Registration starts at {{ moment _performance.first_rehearsal.re√ßgistration "h:mma"}}
        </li>
    </ul></td>
</tr>
{{#if _showAuditions}}
<tr>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td><a href="/MemberPage.html#auditions">Auditions</a>:</td>
    <td><ul>
        <li>See the <a href="/MemberPage.html#auditions">Auditions</a> section of our Member Page for information about how to audition.</li>
    </ul></td>
</tr>
{{/if}}
<tr>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>{{#> linkIf link=(append (f-join "/" (dirname _performance.path) (stem _performance.path)) ".html#dress") }}Dress rehearsals{{/linkIf}}:</td>
    <td><ul>
        {{#each _performance.dresses }}
            <li>{{ moment start "h:mma" }}, {{ moment start "dddd D MMMM YYYY" }}, {{> loc_citation .. loc=location }}</li>
        {{/each}}
    </ul></td>
</tr>
<tr>
    <td>&nbsp;&nbsp;&nbsp;</td>
    <td>{{#> linkIf link=(append (f-join "/" (dirname _performance.path) (stem _performance.path)) ".html#concerts") }}Concerts{{/linkIf}}:</td>
    <td><ul>
        {{#each _performance.concerts }}
            <li>{{ moment start "h:mma, dddd D MMMM YYYY" }} in {{> loc_citation .. loc=location }} ({{ moment call "h:mma" }} call)</li>
        {{/each}}
    </ul>
    </td>
</tr>
