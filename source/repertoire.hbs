---
title: "Repertoire"

logo_include: "logo_ssc"

body_class: "repertoire"

scripts:

---
{{#extend "default_layout" }}
	
	{{#content "sidebar"}}
		<div id="see_also">
            {{> china_2008_info }}
        </div>
	{{/content}}

	{{#content "introduction"}}
		<h2>Repertoire</h2>
		<p class="introduction">Stanford Symphonic Chorus has performed many and varied pieces through the years.</p>
		<h3>Composers</h3>
		<ul>
			{{#_forEach catalog.repertoire.composers }}
				<li><a href="#{{ _kebabCase . }}">{{ . }}</a></li>
			{{/_forEach}}
		</ul>
	{{/content}}

	{{#content "main-content"}}
		<div id="breadcrumb">
			<p>
				<a href="/index.html">Symphonic Chorus Home</a>
				Â» {{ title }}
			</p>
		</div>
		{{#_forEach catalog.repertoire.composers }}
			<br class="clear">
			<div id="{{ _kebabCase . }}" class="repertoire_piece">
				{{#_forEach (_get ../catalog.repertoire.byComposer .) }}
					{{#if 0}} {{! EMB 2020-Sep-20 experiment with CSS Grid layout }}
					<div class="piece">
						<h3 class="title" style="grid-area: title;">{{> piece_citation piece=piece }}</h3>
						{{#if fylp}}
							<div class="fylp" style="grid-area: fylp;">{{#> link_object href=fylp }}For Your Listening Pleasure{{/link_object}}</div>
						{{/if}}
						{{#_forEach performances }}
							<div class="performance">{{#> link_object href=.}}{{quarter}}{{/link_object}}</div>
						{{/_forEach}}
					</div>
					{{else}}
					<div>
						<h3>{{> piece_citation piece=piece }}</h3>
						{{#if fylp}}
							{{#> link_object href=fylp }}For Your Listening Pleasure{{/link_object}}
						{{/if}}
						<table>
							<thead>
								<tr>
									<th style="width=25%;"></th>
									<th style="width=25%;"></th>
									<th style="width=25%;"></th>
									<th style="width=25%;"></th>
								</tr>
							</thead>
							<tbody>
						{{#_forEach (_chunk performances 4) }}
							<tr>
							{{#_forEach . }}
								<td>{{#> link_object href=.}}{{quarter}}{{/link_object}}</td>
							{{/_forEach}}
							</tr>
						{{/_forEach}}
							</tbody>
						</table>
					</div>
					{{/if}}
				{{/_forEach}}
			</div>
		{{/_forEach}}
		<br class="clear">
	{{/content}}

{{/extend}}